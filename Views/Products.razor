@page "/products"
@using SamplePOS.Models
@using SamplePOS.ViewModels
@inject CartViewModel ViewModel

<h3>Productos</h3>

<div class="row border border-primary rounded p-3">
    @foreach (var product in GetProducts())
    {
        <div class="col-md-12 mb-3 product">
            <div class="card">
                <img src="@product.Image" alt="@product.Name" class="card-img-top" />
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">@product.Price.ToString("C")</p>
                    <button class="btn btn-primary" @onclick="() => ViewModel.AddProduct(product)">Agregar</button>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<Product> GetProducts()
    {
        return new List<Product>
        {
            new Product { Id = 1, Name = "Producto 1", Image = "imagen1.jpg", Price = 100m },
            new Product { Id = 2, Name = "Producto 2", Image = "imagen2.jpg", Price = 200m },
        };
    }
}
